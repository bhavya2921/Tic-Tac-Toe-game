<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestFragment"
    android:background="@drawable/bticnewn">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/headingrequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Requests"
            android:textColor="#D500F9"
            android:textSize="30dp"
            android:textStyle="italic"></TextView>

        <TextView
            android:id="@+id/noRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/headingrequest"
            android:layout_marginTop="90dp"
            android:text="No Requests Yet..."
            android:textColor="#BD2C48"
            android:textSize="30dp"
            android:visibility="gone"></TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="70dp"
            android:id="@+id/requestrecycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            tools:listitem="@layout/display_item3"></androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>

</FrameLayout>